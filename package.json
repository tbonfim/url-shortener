  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^6.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "is-url": "^1.2.4",
    "mongoose": "^5.12.14",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "request-promise": "^4.2.6",
    "supertest": "^6.1.3"
  }
}
